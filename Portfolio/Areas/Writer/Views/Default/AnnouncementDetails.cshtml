@model EntityLayer.Concrete.Announcement
@{
    ViewData["Title"] = "AnnouncementDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Detayları</h4>
            <form class="form-group">
                @Html.Label("ID")
                @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "true" })
                <br />
                @Html.Label("Başlık")
                @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @readonly = "true" })
                <br />
                @Html.Label("Tarih")
                @Html.TextBoxFor(x => x.Date, new { @class = "form-control", @readonly = "true" })
                <br />
                @Html.Label("Durum")
                @Html.TextBoxFor(x => x.Status, new { @class = "form-control", @readonly = "true" })
                <br />
                @Html.Label("İçerik")
                @Html.TextAreaFor(x => x.Content, 10, 3, new { @class = "form-control", @readonly = "true" })
                <br />
            </form>
        </div>
    </div>
</div>
