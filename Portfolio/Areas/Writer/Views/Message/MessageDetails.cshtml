@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Detayları</h4>
            <form class="form-group">
                @Html.Label("Gönderen")
                @Html.TextBoxFor(x => x.Sender, new { @class = "form-control", @readonly = "true" })
                <br />
                @Html.Label("Alıcı")
                @Html.TextBoxFor(x => x.Receiver, new { @class = "form-control", @readonly = "true" })
                <br />
                @Html.Label("Konu")
                @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", @readonly = "true" })
                <br />
                @Html.Label("Tarih")
                @Html.TextBoxFor(x => x.Date, new { @class = "form-control", @readonly = "true" })
                <br />
                @Html.Label("Mesaj")
                @Html.TextAreaFor(x => x.MessageContent, 10, 3, new { @class = "form-control", @readonly = "true" })
                <br />
            </form>
        </div>
    </div>
</div>
