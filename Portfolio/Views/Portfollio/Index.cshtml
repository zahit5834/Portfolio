@using EntityLayer.Concrete
@model List<Portfollio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Projelerim</h4>
            <p class="card-description">
                <a href="/Portfollio/AddPortfollio" class="btn btn-outline-primary text-white mb-0">Yeni Proje Ekle</a>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> Proje </th>
                            <th></th>
                            <th> Ücret </th>
                            <th> Durum </th>
                            <th width="350px"> Oran </th>
                            <th> Sil </th>
                            <th> Düzenle </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="@item.Platform" alt="image" />
                                </td>
                                <td> @item.Name </td>
                                <td> @item.Price </td>
                                @if (item.Status == true)
                                {
                                    <td>
                                        <label>Tamamlandı</label>
                                    </td>
                                }
                                @if (item.Status == false)
                                {
                                    <td>
                                        <label>Devam Ediyor</label>
                                    </td>
                                }
                                @if (item.Value >= 70)
                                {
                                    <td>
                                        <div class="progress">
                                            <div class="progress-bar bg-success" role="progressbar" style="width: @item.Value%" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </td>
                                }
                                @if (item.Value < 70 && item.Value>30)
                                {
                                    <td>
                                        <div class="progress">
                                            <div class="progress-bar bg-warning" role="progressbar" style="width: @item.Value%" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </td>
                                }
                                @if (item.Value <= 30)
                                {
                                    <td>
                                        <div class="progress">
                                            <div class="progress-bar bg-danger" role="progressbar" style="width: @item.Value%" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </td>
                                }
                                <td>
                                    <a class="btn btn-outline-danger" href="/Portfollio/DeletePortfollio/@item.PortfollioID">Sil</a>
                                    
                                </td>
                                <td><a class="btn btn-outline-warning" href="/Portfollio/EditPortfollio/@item.PortfollioID">Düzenle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>