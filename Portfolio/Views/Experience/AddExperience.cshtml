@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyim Ekleme Sayfası</h4>
            @using (Html.BeginForm("AddExperience", "Experience", FormMethod.Post))
            {
                <label>Başlık</label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" , @placeholder= "Başlık"})
                <br />
                <label>Tarih</label>
                @Html.TextBoxFor(x => x.Date, new { @class = "form-control", @placeholder = "Tarih" })
                <br />
                <label>Resim Yolu</label>
                @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control", @placeholder = "Resim" })
                <br />
                <label>Açıklama</label>
                @Html.TextAreaFor(x => x.Description, 10, 3, new { @class = "form-control",@placeholder = "Açıklama" })
                <br />

                <button type="submit" class="btn btn-success">Ekle</button>
            }
        </div>
    </div>
</div>
