@using EntityLayer.Concrete
@model List<Portfollio>

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Proje Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th> Görsel </th>
                                <th> Proje Adı </th>
                                <th> URL </th>
                                <th> Fiyat </th>
                                <th> Oran </th>
                                <th> Durum </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.PortfollioID</td>
                                    <td><img src="@item.ImageUrl"/></td>
                                    <td>@item.Name</td>
                                    <td>@item.ProjectUrl</td>
                                    <td>@item.Price</td>
                                    <td>%@item.Value</td>
                                    @if (item.Status==true)
                                    {
                                        <td>
                                            <div class="badge badge-outline-success">Tamamlandı</div>
                                        </td>
                                    }
                                    @if (item.Status == false)
                                    {
                                        <td>
                                            <div class="badge badge-outline-warning">Devam Ediyor</div>
                                        </td>
                                    }
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>