@using EntityLayer.Concrete
@model List<Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Yetenek Listesi Tablosu</h3>
    <br />
    <a href="/Skill/AddSkill/" class="btn btn-primary ">Yeni Yetenek Ekle</a>
    <br />
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="Id">#</th>
                <th scope="col" class="sort" data-sort="Baslik">Başlık</th>
                <th scope="col" class="sort" data-sort="Oran">Oran</th>
                <th scope="col">Sil</th>
                <th scope="col">Düzenle</th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.SkillID</th>
                    <td>@item.Title</td>
                    <td>
                        <div class="d-flex align-items-center">
                            <span class="completion mr-2">@item.Value%</span>
                            <div>
                                <div class="progress" style="width:250px">
                                    <div class="progress-bar bg-success" role="progressbar" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" style="width: @item.Value%;"></div>
                                </div>
                            </div>
                        </div>
                    </td>
                    <td><a href="/Skill/DeleteSkill/@item.SkillID" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Skill/EditSkill/@item.SkillID" class="btn btn-warning">Düzenle</a></td>
                </tr>
            }
        </tbody>
    </table>
    <br />
</div>